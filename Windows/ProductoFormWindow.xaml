<Window x:Class="GestorAlmacen.Views.Windows.ProductoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Producto" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="20" Background="#F5F5F5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Detalles del Producto" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

            <Grid Grid.Row="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="SKU: *" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,15">
                    <TextBox x:Name="txtSku" Padding="5" MaxLength="7" CharacterCasing="Upper"/>
                    <TextBlock Text="Formato requerido: AAA-000 (Ej. CEL-001)" FontSize="10" Foreground="Gray" Margin="2,2,0,0"/>
                </StackPanel>

                <Label Grid.Row="1" Content="Nombre: *" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtNombre" Grid.Column="1" Grid.Row="1" Margin="0,0,0,15" Padding="5"/>

                <Label Grid.Row="2" Content="Categoría: *" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbCategoria" 
                                              Grid.Column="1" Grid.Row="2" Margin="0,0,0,15" Padding="5"
                                              DisplayMemberPath="name" 
                                              SelectedValuePath="category_id"/>

                <Label Grid.Row="3" Content="Min. Reorden:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="txtReorden" Grid.Column="1" Grid.Row="3" Margin="0,0,0,15" Padding="5" Width="100" HorizontalAlignment="Left"/>

                <Label Grid.Row="4" Content="Estado:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <CheckBox x:Name="chkActivo" Grid.Column="1" Grid.Row="4" Content="Producto Activo" IsChecked="True" VerticalAlignment="Center"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancelar" Width="100" Height="35" Margin="0,0,10,0" Click="btnCancelar_Click" Background="White"/>
                <Button Content="Guardar" Width="100" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>