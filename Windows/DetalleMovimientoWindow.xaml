<Window x:Class="GestorAlmacen.Windows.DetalleMovimientoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Movimiento" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F4F4F4">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="FOLIO:" Foreground="Gray" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="txtFolio" Text="---" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="TIPO DE MOVIMIENTO:" Foreground="Gray" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTipo" Text="---" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="ESTADO:" Foreground="Gray" FontSize="10" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <Border x:Name="badgeEstado" Background="Gray" CornerRadius="3" Padding="8,2" Margin="0,2,0,0">
                        <TextBlock x:Name="txtEstado" Text="---" Foreground="White" FontSize="12" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,0,0">
                    <TextBlock Text="FECHA:" Foreground="Gray" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="txtFecha" Text="---" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,15,0,0">
                    <TextBlock Text="USUARIO RESPONSABLE:" Foreground="Gray" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="txtUsuario" Text="---" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,15,0,0">
                    <TextBlock Text="COMENTARIO:" Foreground="Gray" FontSize="10" FontWeight="Bold"/>
                    <TextBlock x:Name="txtComentario" Text="---" FontSize="12" FontStyle="Italic" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="1" Text="Productos Involucrados" FontWeight="Bold" Margin="0,0,0,5"/>

        <DataGrid x:Name="dgDetalles" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" 
                  CanUserAddRows="False" Background="White" BorderBrush="#DDD" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="100" FontWeight="Bold"/>
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*"/>
                <DataGridTextColumn Header="Área Afectada" Binding="{Binding Area}" Width="150"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80" FontWeight="Bold">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,10,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="3" Content="Cerrar" Width="100" Height="35" HorizontalAlignment="Right" 
                Margin="0,15,0,0" Click="btnCerrar_Click"/>
    </Grid>
</Window>